/**app.wxss**/

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 公共样式  */

/* 头部 */

.top_box {
  width: 100%;
}

.top_content {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fd6a00;
  color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
  height: 88rpx;
  line-height: 88rpx;
}

.pagetitle {
  flex: 1;
  text-align: center;
  padding-left: 68rpx;
}

.showmenu {
  height: 100%;
  padding: 0 6px;
}

.showmenuimg {
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
}

/* 隐藏的菜单链接 */

.pagemenu {
   position: fixed; 
  z-index: 10;
  left: 0;
   bottom: 0; 
  background: #efeff4;
  color: #3d4145;
  height: 140rpx;
    bottom: -140rpx;   
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-top: 1px solid #c4c4c4;
}

.menu_item {
  font-size: 28rpx;
  height: 100%;
  flex: 1;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.menu_center {
  border-left: 1px solid #c4c4c4;
  border-right: 1px solid #c4c4c4;
}

.menu_ico {
  text-align: center;
  margin-bottom: 10rpx;
}

.menu_img {
  width: 56rpx;
  height: 56rpx;
}

.menu_text {
  display: block;
  width: 100%;
}

.menu_text {
  text-align: center;
}

/* 日期选择  */

.date_con {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 14rpx 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #f6f6f6;
}

.datebox {
  border: 1px solid #efefef;
  padding: 0 8rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  min-width: 236rpx;
}

.serach_btn {
  width: 76rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: #fd6700;
  border-radius: 8rpx;
  color: #fff;
  display: inline-block;
  vertical-align: middle;
}

/* 底部的按钮 */

.footer_btn_box {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.footer_btn {
  flex: 1;
  background: #393531;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  border-radius: 0;
}

/* 订单信息（条） */

.container_box {
  flex: 1;
  width: 100%;
  overflow-y: auto;
}

/* 间隔线 */

.bo_line {
  height: 20rpx;
  background: #f5f8f3;
}
